{
  "extends": "../tsconfig.json",  /* Extend from the root tsconfig.json for shared settings. */
  "compilerOptions": {
    /* Modules */
    "rootDir": "src",             /* Specify the root directory of your source files. */
    
    /* Emit */
    "outDir": "dist",             /* Specify an output folder for all emitted files. */
    "noEmitOnError": true         /* Prevent emitting files if any type checking errors are reported. */
  },
  "include": [
    "src"                         /* Include all files under 'src' directory for the server. */
  ],
  "typeRoots": [
    "./node_modules/@types",      /* Include custom types from 'node_modules/@types'. */
    "./src/types"                 /* Include custom types from 'src/types' for the server. */
  ]
}
